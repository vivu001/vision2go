<%- include('partials/head') %>
<%- include('partials/nav') %>

<div class="py-1">
    <div class="container">
        <div class="row">
            <div class="text-center mx-auto col-md-8">
                <h1 class="mb-1 text-warning">Found Tour(s)</h1>
            </div>
        </div>
    </div>
</div>
<% tours.forEach((tour) => { %>
    <div class="py-3 text-dark">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="card"><img class="card-img-top" src="<%= tour.places[0].placeImageURL %>" alt="Card image cap">
                        <div class="card-body">
                            <h4 class="card-title"><%= tour.name %></h4>
                            <p class="card-text"><%= tour.review %></p>
                            <a href="/mytours/<%= tour.name %>" class="btn btn-primary">Let's discover</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% }) %>
<%- include('partials/footer') %>
